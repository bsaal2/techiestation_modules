<odoo>
    <data>
        <template id="mobile">
            <t t-call="website.layout">
                <section class="s_cover parallax s_parallax_is_fixed bg-black-50 pt96 pb96" data-scroll-background-ratio="1" style="background-image: none;">
                    <span class="s_parallax_bg oe_img_bg oe_custom_bg" style="background-image: url(&quot;/web/image/439/vibrant-saturated-color-schemes.png&quot;); background-position: 50% 0px;"/>
                    <div class="container">
                    <div class="row s_nb_column_fixed">
                        <div class="col-lg-12 s_title" data-name="Title">
                        <h1 class="s_title_thin" style="font-size: 62px; text-align: center;">Mobile Technology</h1>
                        </div>
                    </div>
                    </div>
                </section>
                <section class="pt32 pb0 bg-white oe_custom_bg" style="">
                  <div class="container">
                    <div class="row s_nb_column_fixed">
                      <div class="col-lg-12 s_title pt16 pb0" style="text-align: center;">
                        <h1 class="s_title_default" style="text-align: left; ">
                          <font style="color: rgb(0, 0, 0); font-size: 24px;">
                            <b>Mobile</b>
                          </font>
                        </h1>
                      </div>
                    </div>
                  </div>
                </section>
                <section class="s_three_columns pt32 pb32 bg-white oe_custom_bg">
                  <div class="container">
                    <div class="row d-flex align-items-stretch">
                      <t t-foreach="mobilelist" t-as="mobile">
                          <div class="col-lg-4 s_col_no_bgcolor pt16 pb16">
                            <div class="card bg-white">
                              <a t-attf-href="/detail/{{ slug(mobile) }}">
                                <img class="card-img-top" t-att-src="'data:image/png;base64,%s' % to_text(mobile.thumbnail)" t-att-alt="mobile.name"/>
                              </a>
                              <div class="card-body">
                                <h3 class="card-title"><t t-esc="mobile.title" /></h3>
                                <p>
                                  <font style="font-size: 11px;"><span t-field="mobile.create_date" t-options="{&quot;format&quot;: &quot;dd/MM/yy&quot;}" /></font>
                                </p>
                                <p class="card-text"><t t-raw="mobile.sub_description" /></p>
                              </div>
                              <div class="card-footer"><span class="fa fa-share-alt-square mr-1" style=""/><b>5</b>&amp;nbsp;shares&amp;nbsp; &amp;nbsp;<span class="fa fa-commenting mr-1" style=""/><b>5</b> comments&amp;nbsp; &amp;nbsp; &amp;nbsp; &amp;nbsp; &amp;nbsp; &amp;nbsp; &amp;nbsp;&amp;nbsp;</div>
                            </div>
                          </div>
                      </t>
                    </div>
                  </div>
                </section>
              
            </t>
        </template>
    </data>
</odoo>