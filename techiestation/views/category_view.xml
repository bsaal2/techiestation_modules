<odoo>
  <data>
    
    <record model="ir.ui.view" id="view_t_category_list">
      <field name="name">t.category.list</field>
      <field name="model">t.category</field>
      <field name="arch" type="xml">
        <tree string="Category">
          <field name="name"/>
          <field name="description"/>
        </tree>
      </field>
    </record>

    <record id="view_t_category_form" model="ir.ui.view">
        <field name="name">t.category.form</field>
        <field name="model">t.category</field>
        <field name="priority" eval="8"/>
        <field name="arch" type="xml">
            <form string="Category">
                <sheet>
                    <group colspan="4">
                        <field name="name" required="1" />
                        <field name="description"/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread" options="{'post_refresh': 'recipients'}"/>
                </div>
            </form>
        </field>
    </record>
    
    <record model="ir.actions.act_window" id="act_t_category_action_window">
      <field name="name">Category</field>
      <field name="res_model">t.category</field>
      <field name="view_mode">tree,form</field>
    </record>
    
    
  </data>
</odoo>